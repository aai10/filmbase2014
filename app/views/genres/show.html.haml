=link_to_back
.page-header
  %h1=@genre.name

-if @genre.edit?(@current_user)
  .btn-toolbar
    =link_to edit_genre_path(@genre),class: 'btn btn-primary' do
      =fa_icon 'edit'
      Редактировать
    =link_to @genre, class: 'btn btn-danger',method: :delete, data: {confirm: t('helpers.sure')} do
      =fa_icon 'trash-o'
      Удалить
%h2 Фильмы
-if @films.blank?
  .alert.alert-info Фильмов не найдено
-else
  .list-group
    -@films.each do |film|
      =render 'films/film', film: film
  =paginate @films

